<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/basicInfoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:2"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/content_desc_listing_image" />

    <TextView
        android:id="@+id/basicInfoPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintTop_toBottomOf="@id/basicInfoImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/listing_detail_horizontal_margin"
        app:layout_constraintHorizontal_bias="0"
        tools:text="$5,700" />

    <TextView
        android:id="@+id/basicInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicInfoPrice"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/listing_detail_horizontal_margin"
        tools:text="Parkview Apartments" />

    <TextView
        android:id="@+id/basicInfoAddressTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicInfoTitle"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/listing_detail_horizontal_margin"
        tools:text="1 Keppel Bay View - Condo for Rent" />

    <TextView
        android:id="@+id/basicInfoAddressSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicInfoAddressTitle"
        android:layout_marginHorizontal="@dimen/listing_detail_horizontal_margin"
        tools:text="Telok Blangah / Harbourfront (D4)" />
    
    <TextView
        android:id="@+id/listingDetailCtaViewMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/view_on_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicInfoAddressSubtitle"
        android:layout_marginHorizontal="@dimen/listing_detail_horizontal_margin"
        android:layout_marginTop="8dp"
        android:textColor="@color/ctaColor"
        android:drawableStart="@drawable/ic_pin_location"
        android:drawableTint="@color/ctaColor"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/listingDetailBedroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/listingDetailBathroom"
        app:layout_constraintTop_toBottomOf="@id/listingDetailCtaViewMap"
        android:layout_marginStart="@dimen/listing_detail_horizontal_margin"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/primaryTextColor"
        android:drawableStart="@drawable/ic_bed"
        android:drawableTint="@color/primaryTextColor"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        tools:text="3 Beds"
        />

    <TextView
        android:id="@+id/listingDetailBathroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/listingDetailBedroom"
        app:layout_constraintEnd_toStartOf="@id/listingDetailArea"
        app:layout_constraintTop_toTopOf="@id/listingDetailBedroom"
        android:layout_marginHorizontal="6dp"
        android:textColor="@color/primaryTextColor"
        android:drawableStart="@drawable/ic_bed"
        android:drawableTint="@color/primaryTextColor"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        tools:text="3 Beds"
        />

    <TextView
        android:id="@+id/listingDetailArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/listingDetailBathroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/listingDetailBedroom"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="@dimen/listing_detail_horizontal_margin"
        android:textColor="@color/primaryTextColor"
        android:drawableStart="@drawable/ic_bed"
        android:drawableTint="@color/primaryTextColor"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        tools:text="3 Beds"
        />

</androidx.constraintlayout.widget.ConstraintLayout>